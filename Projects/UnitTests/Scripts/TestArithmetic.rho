// test arithematic operators

{
	assert(1 + 3*(2 + 1) - 4 == 6);
	assert((1 + 3*(2 + 1) - 4)/2 == 3);

	`n := 4;

	n += 2;
	assert(n == 6);

	n /= 2;
	assert(n == 3);

	n *= 4;
	assert(n == 12);

	n -= 6;
	assert(n == 6);

	`foo := "foo";
	foo += "bar";
	assert(foo == "foobar");

	++n;
	assert(n == 7);

	assert((6 % 4) == 2);

	//--n;
	//assert(n == 6);
}

